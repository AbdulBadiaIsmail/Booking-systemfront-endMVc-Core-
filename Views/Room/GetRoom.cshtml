@model List<Room>

@{
    ViewData["Title"] = "GetRoom";
  
}
<br />
<br />
<form asp-action="GetRoom" asp-controller="Room" method="post">
    <form>
        <div class="row">
            <div class="col-md-8">
                <select name="number" class="form-select  mx-sm-3 mb-2">
                    <option disabled>select item</option>
                    <option value="0" >Avalable</option>
                    <option value="1">NotAvalable</option>
                </select>
            </div>
            <div class="col-md-4">
                <input type="submit" class="btn btn-info" value="search">
            </div>
        </div>
               
              
        </form>
   
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>number_Room</th>
                <th>Room_Des</th>
                <th>Price</th>
                <th>BranchName</th>
                <th>Avalable</th>
                <th>TypeName</th>
                <th> </th>
            </tr>
        </thead>
        <thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Number_Ro</td>
                    <td>@item.Room_Des</td>
                    <td>@item.Price</td>
                    <td>@item.BranchName</td>
                    @if (item.Avalable != 0)
                    {
                        <td>
                       
                            NotAvalable
                        </td>

                    }
                    else 
                    {
                        <td>
                            Avalable
                        </td>
                    }

                    <td>@item.TypeName</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Room" asp-route-id="@item.Number_Ro" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Room" asp-route-id="@item.Number_Ro" class="btn btn-danger" onclick="return confirm('are you sure dalet')">Delete</a>

                    </td>
                </tr>
            }
        </thead>
    </table>
</form>







